{% extends 'admin/base.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}
    <h1>Artist index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Bio</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Pseudonym</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for artist in artists %}
            <tr>
                <td>{{ artist.id }}</td>
                <td>{{ artist.firstname }}</td>
                <td>{{ artist.lastname }}</td>
                <td>{{ artist.bio }}</td>
                <td>{{ artist.age }}</td>
                <td>{{ artist.gender }}</td>
                <td>{{ artist.pseudonym }}</td>
                <td>
                    <a href="{{ path('admin_artist_show', {'id': artist.id}) }}">show</a>
                    <a href="{{ path('admin_artist_edit', {'id': artist.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_artist_new') }}">Create new</a>
{% endblock %}
