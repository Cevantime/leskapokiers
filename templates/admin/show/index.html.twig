{% extends 'admin/base.html.twig' %}

{% block title %}Spectacles index{% endblock %}

{% block body %}
    <h1>Les spectacles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Date de cr√©ation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for show in shows %}
            <tr>
                <td>{{ show.id }}</td>
                <td>{{ show.title }}</td>
                <td>{{ show.creationDate ? show.creationDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('admin_show_show', {'id': show.id}) }}">show</a>
                    <a href="{{ path('admin_show_edit', {'id': show.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">aucun spectacle pour l'instant ;)</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('admin_show_new') }}">Ajouter un nouveau spectacle</a>
{% endblock %}
